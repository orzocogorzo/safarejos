#sidebar-scroll
    width: 100%
    height: calc(100vh - 50px)
    overflow: hidden
    display: flex
    background-color: #ccc;
    border-left: 1.5px solid #000
    position: relative
    .sidebar-scroll-layer
      flex: 1
      // transition: margin 2s ease-in-out
      margin-top: 0px
      display: flex
      flex-direction: column
      .scroll-gradient
        width: 100%
        position absolute
        z-index 20
        height: 50px
        left: 0px
        &.top-gradient
          top: 0px
          background: linear-gradient(#ccc, #fff0)
        &.bottom-gradient
          bottom: 0px
          background: linear-gradient(#fff0, #ccc)
      .sidebar-scroll-section
        flex: 1
        display: flex
        flex-direction: column
        width: 100%
        opacity 1
        transition: opacity 1s
        min-width 100%
        box-sizing border-box
        padding: 20px 10px 0px 10px
        &:not([visible])
          opacity 0
        .content-wrapper
          flex: 1
          display: flex
          justify-content: center
          align-items: center
          min-width: 180px
          font-size: 0.9em
        .scroll-controller-wrapper
          flex: 0
          height: 50px