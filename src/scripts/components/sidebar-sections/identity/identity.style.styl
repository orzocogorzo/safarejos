#identity-component.identity-component-wrapper.sidebar-scroll-section
  flex-direction: column
  .content-wrapper
    .input-wrapper
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      flex: 1
      transition: all 1s
      .input-content
        display: flex
        flex-direction: column
        width: 60%
        padding: 20px
        box-sizing: border-box
        .input-response-wrapper
          display: flex
          flex-direction: row
          margin: 10px 0px
          .input-response
            cursor pointer
            flex: 1
            .input-value
              text-align: center
              border-radius: 50%
              width: 30px
              height: 30px
              justify-content: center
              line-height: 30px
              color: #fff
            &[active] .input-value
              background: #c38096
            &:hover .input-value
              background: #bbb
        input[type=range]
          margin: 0px 19px 0px 10px;
          width: 100%
          box-sizing: border-box
