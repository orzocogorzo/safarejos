#cover-component
  flex-direction: column
  margin-top: -60px
  justify-content: center
  align-items: center
  h1
    text-align: center
    font-size: 1.6em
  .start-button-wrapper
    height: 50px
    width: 200px
    display: flex
    justify-content: center
    align-items: center
    .start-button
      border-radius: 25px
      background: #1d2b38
      color: #ffffff
      border: 1px solid #fff
      display: flex
      justify-content: center
      align-items: center
      flex: 1
      height: 100%
      transition: background .3s
      cursor: pointer
      font-size: 1.5em
      font-weight: 600
